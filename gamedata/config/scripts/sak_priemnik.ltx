; -*- mode: conf-windows; coding: windows-1251-dos -*-
[logic]
active = ph_sound0 ;ph_sound1
;on_hit = hit

[hit]
on_info = %+sak_priemnik_off%

[ph_sound1]
snd = sak_music
on_info = {+sak_priemnik_off} nil
tips = dsh_turn_off_sound
nonscript_usable = false
on_use = %=play_snd_from_obj2(device\click10b) =dsh_set_ogse_var_true(sak_priemnik.quiet)% ph_sound0

[ph_sound0]
tips = dsh_turn_on_sound
nonscript_usable = false
on_use = %=play_snd_from_obj2(device\click10b) =dsh_ogse_var_delete(sak_priemnik.quiet)% ph_sound1
