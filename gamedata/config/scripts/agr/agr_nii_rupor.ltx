; -*- mode: conf-windows; coding: windows-1251-dos -*-

[logic]
active = {+agr_nii_rupor_off} ph_sound@quiet, ph_sound@normal

[ph_sound@normal]
snd = music_nii
on_info = {+agr_nii_rupor_off} ph_sound@quiet
tips = dsh_turn_off_sound
nonscript_usable = false
on_use = %=play_snd_from_obj2(device\click10b) =dsh_set_ogse_var_true(agr_nii_rupor.quiet) +agr_nii_rupor_off% ph_sound@quiet

[ph_sound@quiet]
tips = dsh_turn_on_sound
nonscript_usable = false
on_use = %=play_snd_from_obj2(device\click10b) =dsh_ogse_var_delete(agr_nii_rupor.quiet) -agr_nii_rupor_off% ph_sound@normal
