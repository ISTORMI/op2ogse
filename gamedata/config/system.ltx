[dragdrop]
; ЗП-стайл подсветки ячеек инвентаря зависят от текстуры
; ui\ui_grid.dds. В ней нарисованы 7 клеток, по порядку слева направо:
;
; 1. Обычная клетка инвентаря
;
; 2. При наведении курсора на предмет
;
; 3. Подсветка предметов, находящихся на поясе и в слотах в окнах
; торговли и обыска ( если включена опция highlight_equipped )
;
; 4. При клике по предмету (соотв. при клике по оружию подсвечиваются
; все доступные ему патроны и аддоны, и наоборот)
;
; 5. Подсветка непродаваемых предметов в окне торговли
;
; 6. Подсветка доступных слотов для предмета
;
; 7. Заблокированные клетки для артефактов, если их кол-во
; регулируется в зависимости от надетого костюма

; подсвечивать этим цветом иконку
colorize_ammo       = false

; цвет подсвеченной иконки
color_ammo          = 212, 8, 185, 255 ;RGBA

; раскрашивать в красный цвет иконку непродаваемых предметов, вместо
; подсветки ячеек
colorize_untradable = true

; подсвечивать ячейки с предметами, которые находятся в слотах и на поясе.
; Работает только при включенном highlight_cop.
highlight_equipped  = true

; цвет подкрашенной иконки предметов в слотах и на поясе. Если вдруг
; вообще надо убрать подкраску - можно указать 255,255,255,255
color_equipped      = 255, 225, 0, 255 ;RGBA

; предметы на поясе и в слотах будут не продаваемыми
equipped_untradable = true

; цвет подкрашенной иконки непродаваемых предметов. Если вдруг вообще
; надо убрать подкраску - можно указать 255,255,255,255
color_untradable    = 124, 0, 0, 255 ;RGBA

; всегда подсвечивать предмет под указателем мыши, даже если он уже
; подсвечен по другим условиям.
select_mode_1342    = true


